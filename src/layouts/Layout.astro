---
// Layout.astro - Layout base para mass-up con Kanit SemiBold Italic
export interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  isHomepage?: boolean;
}

const { title, description = "mass-up - App completa para gimnasios pequeños en Colombia", ogImage = "/images/mass-up-og.jpg", isHomepage = false } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="description" content={description} />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="generator" content={Astro.generator} />
  
  <!-- Primary Meta Tags -->
  <title>{title}</title>
  <meta name="title" content={title} />
  <meta name="description" content={description} />
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content={Astro.url} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={ogImage} />
  
  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image" />
  <meta property="twitter:url" content={Astro.url} />
  <meta property="twitter:title" content={title} />
  <meta property="twitter:description" content={description} />
  <meta property="twitter:image" content={ogImage} />
  
  <!-- Fonts: Kanit + Inter -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <!-- Kanit para títulos -->
  <link href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,400;0,500;0,600;0,700;1,600;1,700&display=swap" rel="stylesheet" />
  <!-- Inter para texto -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
  
  <!-- Canonical URL -->
  <link rel="canonical" href={Astro.url} />
  
  <!-- Additional SEO for Colombia -->
  <meta name="geo.region" content="CO" />
  <meta name="geo.placename" content="Colombia" />
  <meta name="language" content="es-CO" />
  
  <!-- Keywords específicas para gimnasios pequeños -->
  <meta name="keywords" content="app gimnasios, software gimnasios colombia, qr gimnasio, pagos nequi gimnasio, rutinas personalizadas, gimnasios pequeños, tecnología fitness colombia" />
  
  <!-- Structured Data for Rich Snippets -->
  {isHomepage && (
    <script type="application/ld+json" is:inline>
    {
      "@context": "https://schema.org",
      "@type": "SoftwareApplication",
      "name": "mass-up",
      "description": "App completa para gestión de gimnasios pequeños con QR de acceso, rutinas personalizadas y pagos automáticos",
      "applicationCategory": "BusinessApplication",
      "operatingSystem": "iOS, Android, Web",
      "offers": {
        "@type": "Offer",
        "price": "50000",
        "priceCurrency": "COP"
      }
    }
    </script>
  )}
</head>

<body class="bg-white">
  <slot />
  
  <!-- WhatsApp Floating Button -->
  <div class="whatsapp-floating fixed bottom-6 right-6 z-50">
    <a 
      href="https://wa.me/+573181123660?text=Hola%20mass-up,%20quiero%20conocer%20más%20sobre%20la%20app%20para%20mi%20gimnasio"
      target="_blank"
      rel="noopener noreferrer"
      class="whatsapp-float bg-green-500 hover:bg-green-600 text-white p-4 rounded-full shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-110 group"
      aria-label="Contactar por WhatsApp"
    >
      <svg class="w-6 h-6 group-hover:scale-110 transition-transform" fill="currentColor" viewBox="0 0 24 24">
        <path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372s-1.04 1.016-1.04 2.479 1.065 2.876 1.213 3.074c.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"/>
      </svg>
      
      <!-- Tooltip -->
      <div class="whatsapp-tooltip absolute bottom-full right-0 mb-2 px-3 py-2 bg-gray-900 text-white text-sm rounded-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 whitespace-nowrap">
        ¡Hablemos por WhatsApp!
        <div class="absolute top-full right-4 w-0 h-0 border-l-4 border-r-4 border-t-4 border-transparent border-t-gray-900"></div>
      </div>
    </a>
  </div>
</body>

<style is:global>
  /* Importar estilos globales que incluyen Tailwind */
  @import "../styles/global.css";
  
  /* TIPOGRAFÍA PERSONALIZADA */
  
  /* Kanit SemiBold 600 Italic para títulos grandes */
  .title-main {
    font-family: 'Kanit', sans-serif;
    font-weight: 600;
    font-style: italic;
    line-height: 1.1;
    letter-spacing: -0.02em;
  }
  
  /* Aplicar Kanit a todos los h1 automáticamente */
  h1 {
    font-family: 'Kanit', sans-serif;
    font-weight: 600;
    font-style: italic;
    line-height: 1.1;
    letter-spacing: -0.02em;
  }
  
  /* Kanit SemiBold para h2 (opcional, sin italic) */
  h2 {
    font-family: 'Kanit', sans-serif;
    font-weight: 600;
    font-style: normal;
    line-height: 1.2;
    letter-spacing: -0.01em;
  }
  
  /* Inter para el resto del texto */
  body {
    font-family: 'Inter', system-ui, sans-serif;
  }
  
  h3, h4, h5, h6 {
    font-family: 'Inter', system-ui, sans-serif;
    font-weight: 700;
  }
  
  /* Clases utility para usar en Tailwind */
  .font-kanit {
    font-family: 'Kanit', sans-serif;
  }
  
  .font-kanit-semibold {
    font-family: 'Kanit', sans-serif;
    font-weight: 600;
  }
  
  .font-kanit-semibold-italic {
    font-family: 'Kanit', sans-serif;
    font-weight: 600;
    font-style: italic;
  }
  
  /* WhatsApp floating button styles */
  .whatsapp-floating {
    position: fixed;
    bottom: 1.5rem;
    right: 1.5rem;
    z-index: 9999;
  }
  
  .whatsapp-float {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 60px;
    height: 60px;
    border-radius: 50%;
    box-shadow: 0 8px 32px rgba(34, 197, 94, 0.3);
    animation: whatsapp-pulse 2s infinite;
  }
  
  @keyframes whatsapp-pulse {
    0% {
      box-shadow: 0 8px 32px rgba(34, 197, 94, 0.3), 0 0 0 0 rgba(34, 197, 94, 0.7);
    }
    70% {
      box-shadow: 0 8px 32px rgba(34, 197, 94, 0.3), 0 0 0 10px rgba(34, 197, 94, 0);
    }
    100% {
      box-shadow: 0 8px 32px rgba(34, 197, 94, 0.3), 0 0 0 0 rgba(34, 197, 94, 0);
    }
  }
  
  /* Tooltip styles */
  .whatsapp-tooltip {
    transform: translateX(0);
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .whatsapp-floating {
      bottom: 1rem;
      right: 1rem;
    }
    
    .whatsapp-float {
      width: 56px;
      height: 56px;
    }
    
    .whatsapp-tooltip {
      display: none;
    }
  }
  
  .whatsapp-floating {
    z-index: 999999 !important;
  }
</style>
</html>